   <meta xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="bosse" author="artemis" contact="www.opentelemac.org" />
   </meta>
   <meta xref="vect">
      <look colour="jet.xml" />
   </meta>
   <meta xref="line">
      <look colour="k" />
