   -->

   <plot1d xref="WaterDepthProfile" type="v-section" size="(12;5)" config="together">
      <layer vars="hauteur d'eau:line" extract="(0;10)(20;10)" target="3:T2DRES" time="[0:-1]" />
   </plot1d>

