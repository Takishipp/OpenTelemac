   />

<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <cast xref="1-f2d-r2d" config="oneofall" time="[-1]" type="2d:">
      <v11 vars=":map" target="1:T2DRES" />
      <v12 vars=":map" target="1:T2DREF" />
      <v13 vars="mapdiff(v11,v12)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="max(v13.values.ravel()) > 1.e-6"
         warn="max(v13.values.ravel()) > 1.e-12"
         value="maxdiff(v13)" />
   </cast>
   <cast xref="2-f2d-r2d" config="oneofall" time="[-1]" type="2d:">
      <v21 vars="SURF:map" target="2:T2DRES" />
      <v22 vars="SURF:map" target="2:T2DREF" />
      <v23 vars="mapdiff(v21,v22)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="max(v23.values.ravel()) > 1.e-6"
         warn="max(v23.values.ravel()) > 1.e-12"
         value="maxdiff(v23)" />
   </cast>
   <cast xref="3-f2d-r2d" config="oneofall" time="[-1]" type="2d:">
