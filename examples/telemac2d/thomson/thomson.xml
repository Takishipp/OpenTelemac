<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="thomson" rank="2">

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="thomson" author="telemac2d" contact="www.opentelemac.org" />
   </deco>

<!-- Python sub-scripts ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <cast xref="fcts" >
      <python>
def mapdiff(a1,a2):
   return a1.support,a2.values-a1.values
def maxdiff(d0):
   a0 = max(np.ravel(d0.values))
   if a0 > 0.0:
      a1 = np.argwhere(d0.values == a0)[-1]
      return "for instance value="+repr(a0)+" at time: "+str(a1[0])+" for variable: "+str(a1[1])+" at node: "+str(a1[2])
   a0 = min(np.ravel(d0.values))
   if 0.0 > a0:
      a1 = np.argwhere(d0.values == a0)[-1]
      return "for instance value="+repr(a0)+" at time: "+str(a1[0])+" for variable: "+str(a1[1])+" at node: "+str(a1[2])
   return "My work has been validated"
      </python>
   </cast>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_thomson.cas"
       title="thomson scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_thomson.cas"
       title="thomson parallel mode"
   />

<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <cast xref="f2d-r2d" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="1:T2DREF" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="max(v3.values.ravel()) > 1.e-6"
         warn="max(v3.values.ravel()) > 1.e-12"
         value="maxdiff(v3)" />
   </cast>

<!-- Check on Parallelisation ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <cast xref="t2d-t2d" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T2DRES" />
      <v2 vars=":map" target="2:T2DRES" />
      <v4 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the parallel file."
         fail="max(v4.values.ravel()) > 1.e-6"
         warn="max(v4.values.ravel()) > 1.e-12"
         value="maxdiff(v4)" />
   </cast>

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="WaterDepth_Y10" type="v-section" size="(12;5)" config="together">
      <layer vars="water depth:line" extract="(0;10)(20;10)" target="1:T2DRES" time="[0:-1]"/>
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(10;10)" >
      <layer vars="hauteur d'eau:mesh" target="1:T2DGEO" config="oneofall" />
   </plot2d>
   <plot2d xref="WaterDepth_t0" size="(10;10)" >
      <layer vars="water depth:map" target="1:T2DRES" config="oneofall" time="[0]" />
   </plot2d>
   <plot2d xref="WaterDepth_t5" size="(10;10)" >
      <layer vars="water depth:map" target="1:T2DRES" config="oneofall" time="[5]" />
   </plot2d>
   <plot2d xref="WaterDepth_tf" size="(10;10)" >
      <layer vars="water depth:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>


</validation>
