<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="confluence">

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <meta xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="confluence" author="telemac2d" contact="www.opentelemac.org" />
   </meta>
   <meta xref="vect">
      <look colour="jet.xml" />
   </meta>
   <meta xref="line">
      <look colour="k" />
   </meta>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
--> 
   <action xref="1"
       do="translate;compile;run;cas;princi"
       code="telemac2d" target="t2d_confluence.cas"
       title="confluence scalar mode"
   />
   <action xref="2"
       do="translate;compile;run;cas;princi" ncsize="4" 
       code="telemac2d" target="t2d_confluence.cas"
       title="confluence parallel mode"
   />   
